<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SettingsActivity"
        android:background="@color/colorCambridgeBlue">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

            <TextView
                    android:id="@+id/deleteBooks_TextViewInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Usuń wszystkie książki:"
                    android:textSize="22sp"
                    android:textColor="@color/colorGunMetal"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="8dp"/>
            <Button
                    android:id="@+id/deleteAllBooks_Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Usuń"
                    android:textColor="@color/colorGunMetal"
                    android:textSize="18sp"
                    android:background="@drawable/button_main_menu"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/deleteGames_TextViewInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Usuń wszystkie gry:"
                    android:textSize="22sp"
                    android:textColor="@color/colorGunMetal"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="8dp"/>
            <Button
                    android:id="@+id/deleteAllGames_Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Usuń"
                    android:textColor="@color/colorGunMetal"
                    android:textSize="18sp"
                    android:background="@drawable/button_main_menu"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
            android:text="Projektowanie Aplikacji Moblinych"
            android:textSize="22sp"
            android:textColor="@color/colorGunMetal"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <TextView
            android:text="Krystian Knap"
            android:textSize="28sp"
            android:textColor="@color/colorGunMetal"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>