<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.books.AddBookActivity"
        android:background="@color/colorCambridgeBlue">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout2"
    >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6">
            <TextView
                    android:text="Tytuł:"
                    android:textSize="20sp"
                    android:textColor="@color/colorGunMetal"
                    android:id="@+id/bookTitle_AddBookTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:paddingLeft="3dp"/>
            <EditText
                    android:id="@+id/bookTitle_AddBookInput"
                    android:textColor="@color/colorTealBlue"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:ems="10"
                    android:layout_weight="3"
                    android:layout_marginRight="3dp"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6">
            <TextView
                    android:text="Autor:"
                    android:textSize="20sp"
                    android:textColor="@color/colorGunMetal"
                    android:id="@+id/bookAuthor_AddBookTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:paddingLeft="3dp"/>
            <EditText
                    android:id="@+id/bookAuthor_AddBookInput"
                    android:textColor="@color/colorTealBlue"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="3"
                    android:layout_marginRight="3dp" android:inputType="textCapSentences"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout3"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <Button
                android:id="@+id/cancelSavingBook_Button"
                android:text="Anuluj"
                android:textColor="@color/colorGunMetal"
                android:textSize="20sp"
                android:background="@drawable/button_main_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="1dp"/>
        <Button
                android:id="@+id/saveBook_Button"
                android:text="Dodaj książkę"
                android:textColor="@color/colorGunMetal"
                android:textSize="20sp"
                android:background="@drawable/button_main_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="2dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>