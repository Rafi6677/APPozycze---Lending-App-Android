<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorCambridgeBlue"
        android:weightSum="7">

    <TextView
            android:text="Kolumna pierwsza"
            android:textColor="@color/colorTealBlue"
            android:textSize="17sp"
            android:id="@+id/firstColumnRow_TextView"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:padding="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

    <TextView
            android:text="Kolumna druga"
            android:textColor="@color/colorTealBlue"
            android:textSize="17sp"
            android:id="@+id/secondColumnRow_TextView"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:padding="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/thirdColumnRow_CheckBox"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@null"
            android:translationX="40dp" android:clickable="false"/>


</LinearLayout>